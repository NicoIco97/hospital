<table border="solid">
    <h2>LISTADO DE PACIENTES</h2>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Cédula</th>
            <th>Edad</th>
            <th>Teléfono</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each pacientes}}
        <form method="post" action="/pacientes/actualizar/{{id}}">
            <tr>
                <td><input id="nombre" name="nombre" value="{{nombre}}" {{../opcion}}></td>
                <td><input id="apellido" name="apellido" value="{{apellido}}" {{../opcion}}></td>
                <td><input id="cedula" value="{{id}}" disabled></td>
                <td><input id="edad" name="edad" value="{{edad}}" {{../opcion}}></td>
                <td><input id="telefono" name="telefono" value="{{telefono}}" {{../opcion}}></td>
                <td>
                    {{#if ../activo}}
                    <a class="eliminar" href="pacientes/eliminar/{{id}}">Eliminar</a>
                    <a class="editar" href="/pacientes/activar">Editar</a>
                    {{else}}
                    <input type="submit" value="Enviar">
                    {{/if}}
                </td>
            </tr>
        </form>
        {{/each}}
    </tbody>
</table>
<a href="pacientes/agregar">Agregar paciente</a>
<a href="/">Volver</a>