<table border="">
    <h2>LISTADO DE MEDICOS</h2>
    <thead>
        <tr>
            <th>CÃ©dula </th>
            <th>Nombre </th>
            <th>Apellido </th>
            <th>Especialidad</th>
            <th>Consultorio </th>
            <th>Correo</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each medicos}}
        <form method="post" action="/medicos/actualizar/{{id}}">
            <tr>
                <td><input id="cedula" value="{{id}}" disabled></td>
                <td><input id="nombres" name="nombres" value="{{nombres}}"></td>
                <td><input id="apellidos" name="apellidos" value="{{apellidos}}"></td>
                <td><input id="especialidad" name="especialidad" value="{{especialidad}}"></td>
                <td><input id="consultorio" name="consultorio" value="{{consultorio}}"></td>
                <td><input id="correo" name="correo" value="{{correo}}"></td>
                <td>
                    {{#if ../activo}}
                    <a class="eliminar" href="medicos/eliminar/{{id}}">Eliminar</a>
                    <a class="editar" href="/medicos/activar">Editar</a>
                    {{else}}
                    <input type="submit" value="Enviar">
                    {{/if}}
                </td>
            </tr>
        </form>
        {{/each}}
    </tbody>
</table>
